<!--wechat-modal.wxml-->
<!--微信联系弹窗组件-->
<view class="wechat-modal-mask" wx:if="{{visible}}" bindtap="onMaskTap">
  <view class="wechat-modal" catchtap="">
    <view class="wechat-modal-header">
      <text class="wechat-modal-title">微信联系</text>
      <view class="wechat-modal-close" bindtap="onClose">×</view>
    </view>
    <view class="wechat-modal-body">
      <image 
        class="wechat-qrcode" 
        src="{{qrcode}}" 
        mode="aspectFit"
        show-menu-by-longpress="{{true}}"
      ></image>
      <text class="wechat-tip">长按识别二维码添加好友</text>
      <view class="wechat-id-row">
        <text class="wechat-id-label">微信号：</text>
        <text class="wechat-id-value">{{wechatId}}</text>
      </view>
    </view>
    <view class="wechat-modal-footer">
      <view class="wechat-copy-btn" bindtap="onCopyWechat">复制微信号</view>
    </view>
  </view>
</view>
